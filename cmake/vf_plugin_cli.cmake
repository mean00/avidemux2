include(admAsNeeded)
include(plugin_cli)
MACRO(INIT_VIDEO_FILTER_CLI  lib  _srcsGtk )

IF (DO_CLI)
        ADM_ADD_CLI_INCLUDE_DIR(ADM_UIs)
        IF (GETTEXT_FOUND)
            ADD_DEFINITIONS("-DHAVE_GETTEXT")
            INCLUDE_DIRECTORIES(${GETTEXT_INCLUDE_DIR})
        ENDIF (GETTEXT_FOUND)

        ADM_ADD_SHARED_LIBRARY(${lib} ${ARGN} ${_srcsGtk})
        AS_NEEDED(${lib})
        ADM_TARGET_NO_EXCEPTION(${lib})
        TARGET_LINK_LIBRARIES( ${lib} ADM_UI_Cli6 ADM_render6_cli)

        IF (GETTEXT_FOUND)
            TARGET_LINK_LIBRARIES(${lib} ${GETTEXT_LIBRARY_DIR})
        ENDIF(GETTEXT_FOUND)
        ADD_TARGET_CFLAGS(${lib} "-DADM_UI_TYPE_BUILD=1")
        INIT_VIDEO_FILTER_INTERNAL(${lib})
        INSTALL_VIDEO_FILTER_INTERNAL(${lib} "cli")
ENDIF (DO_CLI)
ENDMACRO(INIT_VIDEO_FILTER_CLI)
